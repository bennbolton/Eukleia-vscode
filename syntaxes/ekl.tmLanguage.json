{
  "$schema": "vscode://schemas/language-configuration",
  "name": "Eukleia",
  "fileTypes": ["ekl"],
  "scopeName": "source.ekl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#identifiers" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.number-sign.ekl", "match": "#.*$" }
      ]
    },
    "keywords": {
      "patterns": [
        { "name": "entity.name.function.ekl", "match": "\\b(Point|Line|Circle|Angle|Deg|Rad|Print)\\b" }
      ]
    },
    "identifiers": {
        "patterns": [
            { "name": "storage.type.ekl", "match": "\\b[A-Z][a-zA-Z0-9]*\\b" },
            { "name": "variable.other.ekl", "match": "\\b[a-z][a-zA-Z0-9]*\\b" }
        ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.ekl", "match": "\\b\\d+(?:\\.\\d+)?(?:d|deg)?\\b" }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.control.ekl", "match": "==|//|@@" },
        { "name": "keyword.operator.ekl", "match": "\\+|\\-|\\*|/" }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.definition.brackets.ekl", "match": "[\\(\\)\\[\\]\\{\\}]" },
        { "name": "punctuation.separator.comma.ekl", "match": "," },
        { "name": "punctuation.separator.dot.ekl", "match": "\\." },
        { "name": "punctuation.ellipsis.ekl", "match": "\\.\\.\\." },
        { "name": "constant.language.unknown.ekl", "match": "\\?" },
        { "name": "constant.language.angle.ekl", "match": "\\<" }
      ]
    }
  }
}